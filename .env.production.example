# Production Environment Variables
# Copy to .env and fill with actual values

# Flask Configuration
FLASK_ENV=production
APP_ENV=prod
SECRET_KEY=  # Generate with: python -c 'import secrets; print(secrets.token_hex(32))'

# Security
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_SAMESITE=Lax
MFA_REQUIRED=true
ADMIN_SESSION_TIMEOUT=900  # 15 minutes

# Database
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/atlasnexus?retryWrites=true&w=majority
REDIS_URL=rediss://username:password@redis.example.com:6380/0  # Use rediss:// for TLS

# Phase-1 Configuration
COMMIT_SHA=f42638c
BUILD_ID=phase1_20250924_154500
RULESET_VERSION=v1.0
PHASE1_ENVIRONMENT=production

# Feature Flags
REDIS_PREFIX=feature_flags:v1
FEATURE_FLAGS_BACKEND=redis
FEATURE_FLAGS_AUDIT=true

# Admin Allowlist (comma-separated emails)
ADMIN_ALLOWLIST=admin@atlasnexus.co.uk,ops@atlasnexus.co.uk

# Rate Limiting
RATELIMIT_STORAGE_URL=${REDIS_URL}
RATELIMIT_DEFAULT=50/minute
RATELIMIT_AUTH=5/minute
RATELIMIT_API=50/minute
RATELIMIT_PERMUTATIONS=20/minute

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=ASCII
REDACT_PII=true

# Email (if using Gmail)
GMAIL_USER=noreply@atlasnexus.co.uk
GMAIL_APP_PASSWORD=  # Generate app-specific password

# Blob Storage (if using Vercel)
BLOB_READ_WRITE_TOKEN=  # From Vercel dashboard

# Monitoring (optional)
SENTRY_DSN=  # If using Sentry
NEW_RELIC_LICENSE_KEY=  # If using New Relic

# CORS Origins
CORS_ORIGINS=https://atlasnexus.co.uk,https://www.atlasnexus.co.uk